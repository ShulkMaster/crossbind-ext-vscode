{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Haibt",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#reserved-styles-props"
		},
		{
			"begin": "<([a-zA-Z]+[0-9]*)",
			"beginCaptures": {
				"1": {
					"name": "entity.name.tag.html"
				}
			},
			"end": ">",
			"patterns": [
				{
					"include": "#attributes"
				},
        {
          "include": "#jsx-interpolation"
        }
			]
		},
		{
			"match": "</([a-zA-Z]+[0-9]*)>",
			"captures": {
				"1": {
					"name": "entity.name.tag.html"
				}
			}
		},
    {
      "patterns": [
        {
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b",
          "name": "variable.other"
        }
      ]
    }
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "constant.language.haibt",
					"match": "\\bvoid\\b"
				},
				{
					"name": "constant.numeric",
					"match": "\\b(\\d+(\\.\\d+)?)\\b"
				},
				{
					"name": "constant.language.boolean.haibt",
					"match": "\\b(true|false)\\b"
				},
				{
					"name": "constant.other.haibt",
					"match": "\\bundefined\\b"
				},
				{
					"name": "keyword.control.haibt",
					"match": "\\b(template|as|if|else|prop|val|var)\\b"
				},
				{
					"name": "keyword.declaration.haibt",
					"match": "\\b(style|type)\\b"
				},
				{
					"name": "entity.name.type.class",
					"match": "\\bcomponent\\b"
				},
				{
					"name": "keyword.type.haibt",
					"match": "\\b(string|number|boolean)\\b"
				},
				{
					"name": "keyword.other.unit.haibt",
					"match": "\\b\\d*(\\.\\d+)?(em|rem|px|%)\\b"
				},
				{
					"name": "keyword.other.unit.haibt",
					"match": "\\b(em|rem|px|%)\\b"
				},
				{
					"name": "keyword.control.import.haibt",
					"match": "\\buse\\b"
				},
				{
					"name": "keyword.operator.haibt",
					"match": "\\b(\\+|\\-|\\*|\\/|\\%|\\=|\\!|\\&|\\||\\^|\\<|\\>|\\?|\\:|\\.)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.haibt",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.haibt",
					"match": "\\\\."
				}
			]
		},
    "attributes": {
      "patterns": [
        {
          "match": "\\b([a-zA-Z-:]+)\\s*(=)\\s*\"([^\"]*)\"",
          "captures": {
            "1": { "name": "entity.other.attribute-name" },
            "2": { "name": "punctuation.separator.key-value" },
            "3": { "name": "string.quoted.double" }
          }
        }
      ]
    },
    "jsx-interpolation": {
      "patterns": [
        {
          "match": "\\{[^}]+\\}",
          "name": "variable.other"
        }
      ]
    },
		"numbers": {
			"patterns": [
				{
					"name": "keyword.other.unit.suffix.integer.haibt",
					"match": "(^-?[0-9][0-9\\.]+$)"
				}
			]
		},
		"reserved-styles-props": {
			"name": "entity.other.attribute-name.haibt",
			"match": "\\b(backgroundColor|border|margin|padding)\\b"
		}
	},
	"scopeName": "source.haibt"
}