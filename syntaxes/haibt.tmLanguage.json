{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Haibt",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		}	
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.haibt",
				"match": "\\b(if|while|for|return|component|extends|from|import)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.haibt",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.haibt",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"begin": "/\\*",
					"end": "\\*/",
					"name": "comment.block.hbt"
				},
				{
					"begin": "//",
					"end": "\\n",
					"name": "comment.line.double-slash.hbt"
				}
			]
		}
	},
	"scopeName": "source.haibt"
}